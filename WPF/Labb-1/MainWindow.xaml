<Window x:Class="Labb_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb_1"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="300" Width="300" 
        MinHeight="250" MinWidth="250"
        MaxHeight="350" MaxWidth="400"
        Background="#CCC">
    <StackPanel Margin="5">
        <Label Margin="5" FontSize="24" FontWeight="bold">Ange bredd</Label>
        <TextBox Margin="5" FontFamily="Courier" Name="rutaBredd" />

        <Label Margin="5">Ange höjd</Label>
        <TextBox Margin="5" FontFamily="Courier" Name="rutaHöjd" />

        <Button Margin="5" Background="red" Foreground="#FFF" Click="KlickRäkna">Räkna ut!</Button>

        <Label Margin="5">Area</Label>
        <TextBox Margin="5" FontFamily="Courier" Name="rutaArea" />
    </StackPanel>
</Window>
